    "ts-node": "^8.6.2",
    "urban": "^0.3.2",
    "when": "^3.7.8"
  },
  "devDependencies": {
    "@types/node": "^13.7.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
